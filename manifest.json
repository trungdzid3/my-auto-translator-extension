{
  "manifest_version": 3,
  "name": "Dịch Nhanh",
  "version": "3.1.5",
  "description": "Dịch bôi đen (Alt+Q) dùng Google Dịch hoặc Gemini (với tùy chỉnh văn phong).",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "toggle-autotranslate": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "Dịch văn bản đã bôi đen"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self'; font-src 'self'; connect-src https://translate.googleapis.com https://generativelanguage.googleapis.com;"
  }
}

